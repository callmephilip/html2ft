{
  "name": "html2ft",
  "displayName": "html2ft",
  "description": "Convert HTML to FastHTML FT",
  "version": "0.7.5",
  "publisher": "PhilipNuzhnyi",
  "repository": "https://github.com/callmephilip/html2ft",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "html2ft.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html2ft.convert",
        "title": "Convert to FastHTML FT"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "html2ft.convert",
          "when": "resourceLangId == python && editorHasSelection",
          "group": "modification@2"
        }
      ]
    },
    "configuration": {
      "title": "HTML2FT",
      "properties": {
        "html2ft.attrs1st": {
          "type": "boolean",
          "default": false,
          "description": "Indicates if element attributes should be displayed before children elements"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run compile && webpack --mode production --devtool hidden-source-map",
    "compile": "tsc -p ./ && webpack --mode development",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "~20.16.5",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-html-parser": "^6.1.13"
  }
}
